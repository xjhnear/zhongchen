<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
		<div class="box">
			<div class="box-title">
				<h3><i class="icon-edit"></i>用户信息</h3>
			</div>
			<div class="box-content">
				<form id="batch-edit" action="<!--{{url('user/user/save')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
				<input name="urid" type="hidden" value="<!--{{info.urid}}-->" />
				<input name="old_image" type="hidden" value="<!--{{info.image}}-->" />
				<div class="control-group">
					<label for="username" class="control-label">手机号</label>
					<div class="controls">
						<!--{%if info.urid%}-->
						<label><!--{{info.mobile}}--></label>
						<input name="mobile" type="hidden" value="<!--{{info.mobile}}-->" />
						<!--{%else%}-->
						<input type="text" name="mobile" class="input-normal" value="<!--{{info.mobile}}-->" data-rule-required="true" data-msg-required="不能为空">
						<!--{%endif%}-->
					</div>
				</div>
				<div class="control-group">
					<label for="username" class="control-label">姓名</label>
					<div class="controls">
						<input name="username" type="text" value="<!--{{info.username}}-->" />
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<div class="control-group">
							<label class="control-label">性别</label>
							<div class="controls">
								<input name="sex" type="radio" value="1"
								<!--{{ info.card_sex==2 ? '' : 'checked' }}-->/>男
							</div>
						</div>
					</div>
					<div class="span3">
						<div class="controls">
							<input name="sex" type="radio" value="2"
							<!--{{ ginfo.card_sex==2 ? 'checked' : '' }}-->/>女
						</div>
					</div>
				</div>
				<div class="row-fluid">
					<div class="span3">
						<div class="control-group">
							<label class="control-label">头部照片</label>
							<div class="controls">
								<div class="fileupload fileupload-new" data-provides="fileupload">
									<div class="fileupload-new thumbnail" style="max-width: 120px; max-height: 120px;">
										<img src="<!--{{info.image|default('/static/img/nopic.gif')}}-->" />
									</div>
									<div class="fileupload-preview fileupload-exists thumbnail" style="max-width: 120px; max-height: 120px; line-height: 20px;"></div>
									<div>
										<span class="btn btn-file"><i class="icon-picture"></i><span class="fileupload-new">选择图片</span><span class="fileupload-exists">重新选择</span><input type="file"  name='image' /></span>
									</div>
								</div>
								<span class="help-inline"></span>
							</div>
						</div>
					</div>
				</div>
					<div class="row-fluid">
						<div class="span3">
							<div class="control-group">
								<label class="control-label">用户状态</label>
								<div class="controls">
									<input name="type" type="radio" value="1"
									<!--{{ info.type==2 ? '' : 'checked' }}-->/>普通用户
								</div>
							</div>
						</div>
						<div class="span3">
							<div class="controls">
								<input name="type" type="radio" value="2"
								<!--{{ ginfo.type==2 ? 'checked' : '' }}-->/>经销商用户
							</div>
						</div>
					</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
				</div>    
				</form>
			</div>
		</div>
    </div>
</div>
<!--{%endblock%}-->

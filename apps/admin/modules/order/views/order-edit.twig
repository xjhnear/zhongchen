<!--{%extends "base-layout.twig"%}-->
<!--{%block main_content%}-->
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-title">
                <h3><i class="icon-edit"></i>编辑订单</h3>
            </div>

            <div class="box-content">
                <form id="gift-info-form" action="<!--{{url('/order/order/edit')}}-->" method="POST" class='form-horizontal form-validate' enctype="multipart/form-data">
                    <input name="id" type="hidden" value="<!--{{data.orid}}-->"  />
                    <div class="control-group" >
                        <label class="control-label">订单号:</label>
                        <div class="controls">
                            <input type="text" name="orderNo" class="input-large" value="<!--{{data.orderNo  }}-->" />
                        </div>
                    </div>

					<div class="control-group" >
						<label class="control-label">客户姓名:</label>
						<div class="controls">
							<input type="text" name="name" class="input-large" value="<!--{{data.name  }}-->" />
						</div>
					</div>

					<div class="control-group" >
						<label class="control-label">客户电话:</label>
						<div class="controls">
							<input type="text" name="tel" class="input-large" value="<!--{{data.tel  }}-->" />
						</div>
					</div>

					<div class="control-group" >
						<label class="control-label">客户地址:</label>
						<div class="controls">
							<input type="text" name="address" class="input-large" value="<!--{{data.address  }}-->" />
						</div>
					</div>

					<div class="control-group" >
						<label class="control-label">客户证件号:</label>
						<div class="controls">
							<input type="text" name="idCard" class="input-large" value="<!--{{data.idCard  }}-->" />
						</div>
					</div>

					<div class="control-group" >
						<label class="control-label">订单价格:</label>
						<div class="controls">
							<input type="text" name="price" class="input-large" value="<!--{{data.price  }}-->" />
						</div>
					</div>

					<div class="control-group" >
						<label class="control-label">合同时间:</label>
						<div class="controls">
							<input type="text" name="contractTime" class="datetimepicker" value="<!--{{data.contractTime  }}-->" />
						</div>
					</div>

					<div class="control-group" >
						<label class="control-label">支付时间:</label>
						<div class="controls">
							<input type="text" name="payTime" class="datetimepicker" value="<!--{{data.payTime  }}-->" />
						</div>
					</div>

					<div class="control-group">
						<label for="group" class="control-label">付款状态</label>
						<div class="controls">
							<!--{{form_select('status',payStatus_arr,data.payStatus_arr)}}-->
						</div>
					</div>

					<div class="control-group">
						<label for="group" class="control-label">流程进度</label>
						<div class="controls">
							<!--{{form_select('status',status_arr,data.status)}}-->
						</div>
					</div>

					<div class="control-group" >
						<label class="control-label">发票类型:</label>
						<div class="controls">
							<input type="text" name="receiptType" class="input-large" value="<!--{{data.receiptType  }}-->" />
						</div>
					</div>

					<div class="control-group" >
						<label class="control-label">发票抬头:</label>
						<div class="controls">
							<input type="text" name="receiptTitle" class="input-large" value="<!--{{data.receiptTitle  }}-->" />
						</div>
					</div>

					<div class="control-group" >
						<label class="control-label">发票内容:</label>
						<div class="controls">
							<input type="text" name="receiptContent" class="input-large" value="<!--{{data.receiptContent  }}-->" />
						</div>
					</div>

					<div class="control-group">
						<label for="textfield" class="control-label">联系方式</label>
						<div class="controls">
							<div id="kv">
								<!--{%for item in data.extrainfo%}-->
								<p>
									<span style="width:50%">姓名:<input type="text" name="keys[]" class="input-large" value="<!--{{item.title  }}-->" ></span>
									<span style="width:50%;padding-left: 50px;">电话:<input type="text" name="values[]" class="input-xlarge" value="<!--{{item.content  }}-->" ></span>
								</p>
								<!--{%endfor%}-->
							</div>
						</div>
						<div class="controls">
							<a class="btn btn-primary ajax-addkey" href="javascript:void(0);">添加联系方式</a>
						</div>
					</div>

			        <div class="form-actions">
			            <button type="submit" class="btn btn-primary"><i class="icon-ok"></i>保存</button>
			        </div>
			        			        
			        <div class="box-title"></div>

				</form>
		    </div>
		</div>
	</div>
</div>

<!--{%endblock%}-->

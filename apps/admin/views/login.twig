<!doctype html>
<html>
<head>
	<meta charset="utf-8">
	<title><!--{{lang_get('description.web_name')}}--></title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
	<meta name="apple-mobile-web-app-capable" content="yes" />
	<meta names="apple-mobile-web-app-status-bar-style" content="black-translucent" />
	<link rel="stylesheet" href="/static/css/bootstrap.min.css">
	
	<link rel="stylesheet" href="/static/css/plugins/icheck/all.css">
	<link rel="stylesheet" href="/static/css/style.css">
	<link rel="stylesheet" href="/static/css/themes.css">
	<script src="/static/js/jquery.min.js"></script>
	<script src="/static/js/plugins/touchwipe/touchwipe.min.js"></script>
	<script src="/static/js/plugins/nicescroll/jquery.nicescroll.min.js"></script>
	<script src="/static/js/plugins/validation/jquery.validate.min.js"></script>
	<script src="/static/js/plugins/validation/additional-methods.min.js"></script>
	<script src="/static/js/plugins/icheck/jquery.icheck.min.js"></script>
	<script src="/static/js/bootstrap.min.js"></script>
	<script src="/static/js/eakroko.js"></script>

</head>

<body class='login'>
	<div class="wrapper">
		<h1><a><!--{{lang_get('description.web_name')}}--></a></h1>
		<div class="login-body">
			<h2>SIGN IN</h2>
			<form action="<!--{{url('login/do')}}-->" method='POST' class='form-validate' id="login">
			    <!--{%if error%}-->
			    <div class="control-group">
				    <div class="controls">
				    	<span class="label label-warning"><!--{{error}}--></span>
				    </div>
			    </div>
			    <!--{%endif%}-->
				<div class="control-group">
					<div class="email controls">
						<input type="text" name='email' placeholder="<!--{{lang_get('description.uname')}}-->" class='input-block-level' value="" data-rule-required="true" data-msg-required="<!--{{lang_get('description.uname')}}--><!--{{lang_get('common.required')}}-->">
					</div>
				</div>
				<div class="control-group">
					<div class="pw controls">
						<input type="password" name="pwd" placeholder="<!--{{lang_get('description.passw')}}-->" class='input-block-level' value="" data-rule-required="true" data-msg-required="<!--{{lang_get('description.passw')}}--><!--{{lang_get('common.required')}}-->">
					</div>
				</div>
				<!--{%if captcha==true%}-->
				<div class="control-group">
					<div class="controls">
					    <div class="input-append">
						<input type="text" name="captcha" placeholder="验证码" class='input-block-level input-medium' data-rule-required="true">
						<span class="add-on" style="padding:0px;height:28px;"><img id="captcha" src="/captcha" /></span>
						</div>
					</div>
				</div>
				<!--{%endif%}-->
				<div class="submit">
					<div class="remember">
						<input type="checkbox" name="remember" class='icheck-me' data-skin="square" data-color="blue" id="remember"> <label for="remember"><!--{{lang_get('description.auto_login')}}--></label>
					</div>					
					<input type="submit" value="<!--{{lang_get('description.login')}}-->" class='btn btn-primary'>
				</div>
			</form>
			<div class="forget">
				<a href="javascript:void(0);"><span></span></a>
			</div>
		</div>
	</div>
	
</body>
<script>
    $(function(){
        $('#captcha').click(function(){
            $(this).attr('src',$(this).attr('src'));
        });
        
        $('#cg_language').change(function(){
        	$.get('/login/set-language',{'lang':$(this).val()},function(){
        		location.reload();
        	});
        });
    });
</script>
</html>
